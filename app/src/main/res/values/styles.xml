<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

<!--自定义的title指示器-->
    <style name="CustomTitlePageIndicator">
        <item name="android:background">#18FF0000</item>
        <item name="footerColor">@color/ORANGE</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">@color/WET_ASPHALT</item>
        <item name="selectedColor">@color/MIDNIGHT_BLUE</item>
        <item name="selectedBold">true</item>
    </style>
<!---->


<!--Actionbar-->
    <style name="CustomActionBarTheme" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/POMEGRANATE</item>
    </style>
<!---->











</resources>
